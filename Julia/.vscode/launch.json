{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "julia",
      "request": "launch",
      "name": "Run TinyLanguage tests",
      "program": "${workspaceFolder}/test/runtests.jl",
      "cwd": "${workspaceFolder}/TinyLanguage",
      "juliaEnv": "@."
    },
    {
      "type": "julia",
      "request": "launch",
      "name": "Run demo (--run)",
      "program": "${workspaceFolder}/tiny_lang.jl",
      "args": ["demo.tiny", "--run"],
      "cwd": "${workspaceFolder}/TinyLanguage",
      "juliaEnv": "@."
    },
    {
      "type": "julia",
      "request": "launch",
      "name": "Run demo (trace lex+parse)",
      "program": "${workspaceFolder}/tiny_lang.jl",
      "args": ["demo.tiny", "--trace-lex", "--trace-parse", "--run"],
      "cwd": "${workspaceFolder}/TinyLanguage",
      "juliaEnv": "@."
    }
  ]
}
